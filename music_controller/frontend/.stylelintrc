{
    "extends": [
        "stylelint-config-standard",
        "@linaria/stylelint"
    ],
    "customSyntax": "postcss",
    "rules": {
        "color-hex-case": [
            "lower",
            {
                "message": "Lowercase letters are easier to distinguish from numbers"
            }
        ],
        "indentation": [
            2,
            {
                "except": [
                    "block"
                ],
                "message": "Please use 2 spaces for indentation.",
                "severity": "warning"
            }
        ]
    }
}
